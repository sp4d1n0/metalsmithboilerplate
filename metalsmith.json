{
  "plugins": {
    "metalsmith-layouts": {
      "default": "default.hbs",
      "directory": "./src/templates/layouts"
    },
    "metalsmith-discover-partials": {
      "directory": "./src/templates/imports",
      "pattern": "/\\.hbs$/"
    },
    "metalsmith-discover-helpers": {
      "directory": "./src/templates/helpers",
      "pattern": "/\\.js$/"
    }
  }
}
